{
    "name": "@kuindji/reactive",
    "version": "1.0.24",
    "author": "Ivan Kuindzhi",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kuindji/reactive.git"
    },
    "main": "dist/index.js",
    "devDependencies": {
        "@happy-dom/global-registrator": "^20.0.11",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@types/bun": "^1.3.3",
        "@types/react": "^19.2.7",
        "@typescript-eslint/eslint-plugin": "^8.48.0",
        "globals": "^16.5.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.0"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./react": {
            "types": "./dist/react.d.ts",
            "import": "./dist/react.js"
        }
    },
    "bugs": {
        "url": "https://github.com/kuindji/reactive/issues"
    },
    "description": "A JavaScript/TypeScript utility library for building reactive applications with events, actions, stores, and React hooks",
    "directories": {
        "test": "tests"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "files": [
        "dist/**/*"
    ],
    "homepage": "https://github.com/kuindji/reactive#readme",
    "keywords": [
        "events",
        "actions",
        "store",
        "state-management",
        "react-hooks",
        "typescript",
        "event-emitter",
        "observable",
        "async",
        "event-bus",
        "action-bus"
    ],
    "license": "ISC",
    "scripts": {
        "build": "tsc -p ./tsconfig-build.json",
        "lint": "bun eslint .",
        "test": "bun test tests/**/*.spec.ts*",
        "test:types": "tsc -p ./tests/types/tsconfig.json",
        "test:all": "bun run test:types && bun run test"
    },
    "sideEffects": false,
    "types": "dist/index.d.ts"
}