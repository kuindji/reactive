{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": false,
        "noImplicitAny": true,
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "allowJs": false,
        "module": "commonjs",
        "target": "es2022",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "lib": [
            "dom",
            "esnext"
        ],
        "types": [
            "bun"
        ]
    },
    "include": [
        "./src/**/*",
        "./tests/**/*"
    ],
    "exclude": [
        "./dist/**/*",
        "./tests/types/**/*"
    ]
}